{
  "name": "crypto-exchange-mcp",
  "version": "1.4.5",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "bin": {
    "crypto-exchange-mcp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "build": "rslib build",
    "dev": "rslib build --watch",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js",
    "test": "vitest run",
    "generateGateOfflineData": "tsx ./src/adapter/gate/generateOfflineData.ts",
    "generateBybitOfflineData": "tsx ./src/adapter/bybit/generateOfflineData.ts",
    "generateOkxOfflineData": "tsx ./src/adapter/okx/generateOfflineData.ts",
    "generateBinanceOfflineData": "tsx ./src/adapter/binance/generateOfflineData.ts",
    "generateBitgetOfflineData": "tsx ./src/adapter/bitget/generateOfflineData.ts",
    "generateOkxDexOfflineData": "tsx ./src/adapter/okx-dex/generateOfflineData.ts",
    "generateOfflineData": "npm run generateGateOfflineData && npm run generateBybitOfflineData && npm run generateOkxOfflineData && npm run generateBinanceOfflineData && npm run generateBitgetOfflineData && npm run generateOkxDexOfflineData",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/inspector": "~0.13.0",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "cheerio": "^1.0.0",
    "fs-extra": "^11.3.0",
    "ts-morph": "^26.0.0",
    "turndown": "^7.2.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@rslib/core": "^0.8.0",
    "@types/node": "17.0.40",
    "@types/turndown": "^5.0.5",
    "binance": "^3.0.0",
    "bitget-api": "^2.3.5",
    "bybit-api": "^4.1.13",
    "gateio-api": "^1.2.9",
    "okx-api": "^2.0.5",
    "prettier": "^3.5.3",
    "pretty-quick": "^4.2.2",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.19.4",
    "typescript": "5.0.4",
    "vitest": "^3.0.9"
  },
  "simple-git-hooks": {
    "pre-commit": "npx pretty-quick --staged"
  }
}
